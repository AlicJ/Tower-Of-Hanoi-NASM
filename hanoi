%include "asm_io.inc"

SECTION .data
   fmtN: db "Parameter %d",10, 0
   fmtS: db "Parameter %s",10, 0
   t_range: db "Argument out of range", 0
   t_calc: db "Calculating", 0

SECTION .bss
   arr: resd 1
   ele: resd 1
   disk: resd 1
   space: resd 1

   frompillar: resd 1
   topillar: resd 1

   pillar1: resd 9
   pillar2: resd 9
   pillar3: resd 9

   pillarList: resd 3

SECTION .text
   global  asm_main

   extern printf
   extern strlen
   extern sys_exit
   extern exit

set_arrays:
   enter 0,0             ; setup routine
   pusha                 ; save all registers

   mov edx, [ebp+8]      ; the parameter, i.e. N
   ; mov eax, edx
   ; call print_int

   mov ebx, dword 2  ; setting pillar2

   ; set pillar2     
   mov eax, pillar2
   L0:
   add eax, 32
   mov [eax], dword 9
   sub eax, 4
   ; in a loop set 0 in the remaining items
   ; eax controls the loop, we end the loop when eax=pillar2
   L1: mov [eax], dword 0
   ; see which pillar is setting
   cmp ebx, dword 2
   je pillar2
         cmp eax, pillar3
   jne NEXT
   jmp L2
   pillar2: cmp eax, pillar2
   je L2
   NEXT: sub eax, 4
   jmp L1
   L2:

   inc ebx
   ; pillar2 set, now pillar3
   cmp ebx, dword 3
   jne pillar1
   mov eax, pillar3
   je L0

   pillar1:
   ; set pillar1
   mov eax, pillar1
   add eax, 32
   mov [eax], dword 9
   sub eax, 4
   ; in a loop set edx in the remaining items
   ; eax controls the loop, we end the loop when eax=pillar1
   L3: mov [eax], dword edx ; move edx to the memory location of current element
   cmp eax, pillar1
   je L5
   sub eax, 4
   ; if edx > 0, decrement, otherwise keep it 0
   cmp edx, 0
   je L4
   dec edx
   L4: jmp L3
   L5: jmp set_arrays_end

  set_arrays_end:
   popa
   leave
   ret

display_array:
   enter 0,0             ; setup routine
   pusha                 ; save all registers

   display:
      ; ebx points to the beginning of the array
      ; we will use ecx to control the counting loop of 9
      ; edx indicates which array to draw
      ; ecx indecates which element to draw
      ; ebx is the address for that elements
      ; eax is the value to print (elements, spaces, etc)
      mov ecx, dword 1
      mov [arr], dword 0

      ; begin drawing each pillar' ecx'th element
      BEGIN:
         cmp ecx, dword 9
         ; exit if ecx > 9
         jg display_array_end
         ; which pillar to draw
         COMPARE:   
            mov edx, [arr]
            
            cmp edx, dword 2
            jg NEXT_ELE
            imul edx, dword 4

            mov ebx, dword [pillarList+edx]

            DLOOP:
               ; element offset
               mov eax, ecx
               sub eax, dword 1
               imul eax, dword 4
               add eax, ebx
               ; eax has the disk('#') number
               mov eax, dword [eax]
               mov [disk], eax
               mov edx, dword 9
               ; eax has the space(' ') number
               sub edx, eax
               ; save them
               mov [space], edx

               call print_int
               mov eax, ' '
               call print_char

               END_DRAW:
               add [arr], dword 1
               jmp COMPARE

            NEXT_ELE:
               inc ecx
               mov [arr], dword 0
               call print_nl
               jmp BEGIN
         ; end of COMPARE
      ; end of BEGIN
      display_array_end:
         popa
         leave
         ret
   ; end of display

funcHanoi:
   push ebp
   mov ebp,esp
   ; get n
   mov eax,[ebp+8]
   cmp eax, 0
   jle done
   dec eax
   ; stack for first recursive invocation
   ; to
   push dword [ebp+12]
   ; from
   push dword [ebp+16]
   ; using
   push dword [ebp+20]
   ; n
   push dword eax
   call funcHanoi
   add esp,16
   ; a disk moved, draw it
   ; to
   push dword [ebp+12]
   ; from
   push dword [ebp+16]
   call moveDisk
   add esp,8
   ; get n
   mov eax,[ebp+8]
   dec eax
   ; stack for second recursive invocation
   ; from
   push dword [ebp+16]  
   ; using
   push dword [ebp+20]
   ; to
   push dword [ebp+12]
   ; n
   push dword eax
   call funcHanoi
   add esp,16
done:
   mov esp,ebp
   pop ebp
   ret

moveDisk:
   enter 0,0
   pusha
   ; get arguments
   mov edx, dword [ebp+12]       ; from
   mov ecx, dword [ebp+8]        ; to
   ; offset
   imul edx, dword 4
   imul ecx, dword 4
   ; assign array adresses
   mov eax, dword pillarList
   mov edx, [eax+edx]
   mov ecx, [eax+ecx]
   ; save the addresses
   mov [topillar], edx
   mov [frompillar], ecx

   ; loop through 'from' pillar
   mov ebx, dword 0


   FROM_pillar:
      ; eax is for printing
      ; ebx indicates which element 
      ; ecx is the address offset for that element
      ; edx is to store the element's address

      cmp ebx, dword 8
      jge END_MOVING

      ; set address offset of the element
      mov ecx, dword ebx
      imul ecx, dword 4
;passed

      ; get the array address
      mov edx, dword [frompillar]

      ; get the edx'th element's address
      add edx, ecx
      ; get the edx'th element
      mov eax, [edx]

      cmp eax, dword 0
      ; if it is 0, continue to next loop
      je FROM_pillar_INC
      ; otherwise take it, and replace it by 0
      mov [edx], dword 0
      ; reset element counter
      mov ebx, dword 0
      ; save the disk number
      mov [disk], eax
      jmp TO_pillar

   FROM_pillar_INC:
      inc ebx
      jmp FROM_pillar

   TO_pillar:
      ; ebx indicates which element 
      ; ecx is the address offset for that element
      ; edx is to store the element's address

      mov ecx, ebx
      imul ecx, dword 4
      ; get the array address
      mov edx, dword[topillar]
      ; get the edx'th element's address
      add edx, ecx
      ; get the edx'th element
      mov eax, [edx]

      cmp eax, dword 0
      ; next element if it is 0
      je TO_pillar_INC
      ; if it is greater than 0, use the previous element
      sub edx, dword 4
      ; replace it by the disk number from FROM_pillar
      mov eax, [disk]
      mov [edx], eax
      ; leave
      jmp END_MOVING

   TO_pillar_INC:
      inc ebx,
      jmp TO_pillar

   END_MOVING:
      ; draw the array
      call display_array
      popa
      leave
      ret

asm_main:
   enter 0,0             ; setup routine
   pusha                 ; save all registers

   ; put address of each pillar array in pillarList
   mov [pillarList], dword pillar1
   mov [pillarList+4], dword pillar2
   mov [pillarList+8], dword pillar3

   ; address of 1st argument = name of the program is at address ebp+12
   ; address of 2nd argument = address of 1st argument + 4

   mov eax, dword [ebp+12]   ; put address of first argument into register eax
   add eax, 4                ; increment to get to address of second argument
   mov edx, dword [eax]      ; put value that is in eax into edx

   ; convert string to int
   mov ecx, 0
   mov cl, [edx]
   sub ecx, '0'
   mov eax, ecx
   ; remove the 2 parameters
   add esp, 8

   ; set up the arrays
   push eax
   call set_arrays
   add esp, 4
   ; display initial state
   call display_array
   ; setup stack for funcHanoi
   ; funcHanoi(n, to from, using)
   ; using
   push dword 2
   ; from
   push dword 0
   ; to
   push dword 1
   ; n
   push dword eax   
   call funcHanoi
   add esp,16

 asm_main_end:
   popa                  ; restore all registers
   call exit

